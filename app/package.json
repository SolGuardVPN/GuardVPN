{
  "name": "dvpn-client",
  "version": "1.0.0",
  "description": "Decentralized VPN Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "vpn",
    "decentralized",
    "solana",
    "wireguard"
  ],
  "author": "DVPN Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "@solana/web3.js": "^1.87.0",
    "@coral-xyz/anchor": "^0.28.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.dvpn.client",
    "productName": "DVPN Client",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "category": "Network"
    }
  }
}
